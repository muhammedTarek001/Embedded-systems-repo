#ifndef LCD_H_
#define LCD_H_

#define LCD_PORT       GPIO_C
#define LCD_RS_PORT    GPIO_A
#define LCD_EN_PORT    GPIO_A
#define LCD_RS_PIN    GPIO_PIN0
#define LCD_EN_PIN    GPIO_PIN7
#define LCD_D4_PIN    GPIO_PIN2
#define LCD_D5_PIN    GPIO_PIN3
#define LCD_D6_PIN    GPIO_PIN4
#define LCD_D7_PIN    GPIO_PIN5
#define LCD_DATA    1
#define LCD_COMMAND 0


#define CLEAR       0x01
#define BIT4_Mode   0x28
#define DisplayON_CursorOFF  0x0c
#define DisplayOFF_CursorON  0x0a
#define DisplayON_CursorBlink  0x0a
#define Cursor_home 0x02


void lcd_Init();
void lcd_command(unit16 cmd);
void lcd_write_charcter(unit8 charcter);
void lcd_enable_active();



#endif /* LCD_H_ */
